extends Polygon2D

var velocity: Vector2 = Vector2(100.0, 0.0)

###############################################################################
# Builtin functions                                                           #
###############################################################################

func _ready() -> void:
	$VisibilityNotifier2D.connect("screen_exited", self, "_on_exit_screen")

func _physics_process(delta: float) -> void:
	global_position += velocity * delta

###############################################################################
# Connections                                                                 #
###############################################################################

func _on_exit_screen() -> void:
	queue_free()

